include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .welcome-section
        section.hero
          .container
            header.header
              .header__logo
                h1.logo AT
              .header__btns
                nav.menu
                  - var items = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"]

                  ul.menu__list
                    each item in items 
                      li.menu__item
                        a.menu__link #{item}
              .header__links
                - var icons = ["insta", "vk", "github"];
                ul.socials
                  each item in icons
                    li.socials__item
                      a(href="").socials__link
                        +icon(item, "socials__icon")
            .hero__content
              .user-data
                .user-data__desc Личный сайт веб разработчика
                h1.user-data__name Ткачёв Александр

            .hero__bottom-btn
              a(href="#").hero__bottom-btn.scroll-down-btn Скролл
              +icon("scroll", "scroll__icons")

        section.about-section
          .container
            .about
              .about__left
                .user-info
                  .user-info__avatar
                    .avatar
                      +image("content/user.jpg", "avatar__img")
                  .user-info__content
                    -
                      var userdata = [
                        ["Проживаю:", "Москва"],
                        ["Возраст:", "23 года"],
                        ["Родился:", "7 апреля 1997"]
                      ];
                    table.user-info__data
                      tbody.user-info__data-body
                        each row in userdata
                          tr
                            td #{row[0]}
                            td #{row[1]}
              .about__right
              
